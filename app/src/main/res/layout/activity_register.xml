<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/pharmeasy"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_username"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginBottom="35dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_pw"
        android:ems="10"
        android:hint="@string/reg_password"
        android:inputType="textPassword"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/pw"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_pw"
        android:ems="10"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/mobile"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/confirm_pw"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginBottom="35dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_mobile"
        android:ems="10"
        android:hint="@string/mobile"
        android:inputType="number"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_location"
        android:ems="10"
        android:hint="@string/address_reg"
        android:inputType="text"
        android:textSize="16dp" />


    <Spinner
        android:id="@+id/spinner"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />



    <Button
        android:id="@+id/button_register"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#04ea00"
        android:textColor="#FFFFFF"
        android:text="@string/register"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:text="@string/already_registered"/>

        <TextView
            android:id="@+id/textview_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#04ea00"
            android:textSize="16sp"
            android:text="@string/login"/>

    </LinearLayout>

</LinearLayout>