<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sett_bg"
    tools:context=".Activity.EditPatientActivity">

    <EditText
        android:id="@+id/med"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/confirm_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:background="#80000000"
        android:ems="10"
        android:hint="Sulfonylureas"
        android:inputType="number"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="183dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/patient_details"
        android:textColor="#FCF4FCED"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="17dp"
        android:background="#11000000"
        android:ems="10"
        android:text="Suresh Dasari"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:background="#11000000"
        android:ems="10"
        android:text="sureshdas@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />


    <EditText
        android:id="@+id/med1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/confirm_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:background="#80000000"
        android:ems="10"
        android:hint="Paracetamol"
        android:inputType="number"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosis" />

    <EditText
        android:id="@+id/med2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="41dp"
        android:background="#80000000"
        android:ems="10"
        android:hint="Metformin "
        android:inputType="text"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosis" />

    <EditText
        android:id="@+id/med4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="41dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/addMedicine"
        android:inputType="text"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med5" />

    <EditText
        android:id="@+id/med5"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="41dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/addMedicine"
        android:inputType="text"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med7" />

    <EditText
        android:id="@+id/med6"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/addMedicine"
        android:inputType="text"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med8" />

    <EditText
        android:id="@+id/med7"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="41dp"
        android:background="#80000000"
        android:ems="10"
        android:hint="Thiazolidinediones"
        android:inputType="text"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med2" />

    <EditText
        android:id="@+id/med8"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#80000000"
        android:ems="10"
        android:hint="Insulin"
        android:inputType="text"
        android:textColor="#FC090A0A"
        android:textColorHint="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med" />


    <Button
        android:id="@+id/button_addPatient"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:background="#04ea00"
        android:text="@string/register"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/med4"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/diagnosis"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:background="#11000000"
        android:ems="10"
        android:gravity="start|top"
        android:hint="The patient is dianosed with diabetes level two"
        android:inputType="textMultiLine"
        android:textColor="#FC090A0A"
        android:textColorHint="#65070303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pname" />

    <!-- <ImageView
         android:id="@+id/imageView8"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:layout_marginStart="130dp"
         android:layout_marginTop="16dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:srcCompat="@drawable/apollohospital" />-->


</android.support.constraint.ConstraintLayout>