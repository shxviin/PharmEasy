<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.updatePasswordActivity">




    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:background="@drawable/sett_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/seventyfive"
                android:text="@string/update_password"
                android:textColor="@android:color/white"
                android:textSize="@dimen/thirtyfour" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="@dimen/twofiftyone"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/onefifty"
            android:layout_marginLeft="@dimen/seventyfive"
            android:orientation="vertical">

            <EditText
                android:id="@+id/current_pw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_and_form_field_height"
                android:layout_above="@+id/username"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/thirtyfive"
                android:background="@color/formfieldbg"
                android:drawableLeft="@drawable/ic_pw"
                android:ems="10"
                android:hint="@string/current_password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/form_text_size" />

            <EditText
                android:id="@+id/new_pw"
                android:layout_width="@dimen/form_field_width"
                android:layout_height="@dimen/button_and_form_field_height"
                android:layout_above="@+id/username"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/thirtyfive"
                android:background="@color/formfieldbg"
                android:drawableLeft="@drawable/ic_pw"
                android:ems="10"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/form_text_size" />

            <EditText
                android:id="@+id/confirm_pw"
                android:layout_width="@dimen/form_field_width"
                android:layout_height="@dimen/button_and_form_field_height"
                android:layout_above="@+id/pw"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/thirtyfive"
                android:background="@color/formfieldbg"
                android:drawableLeft="@drawable/ic_pw"
                android:ems="10"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/form_text_size" />


            <Button
                android:id="@+id/button_update"
                android:layout_width="@dimen/twosix"
                android:layout_height="@dimen/button_and_form_field_height"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/green"
                android:text="@string/update_info"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
